FROM golang:latest

MAINTAINER 7sDream "docker@7sdre.am"

WORKDIR $GOPATH/src/github.com/7sDream/rikka
ADD . $GOPATH/src/github.com/7sDream/rikka

RUN go get -v -d . && \
    go build -v . && \
    cp rikka $GOPATH/bin && \
    cp -R server $GOPATH/bin/ && \
    rm -rf $GOPATH/src

WORKDIR $GOPATH/bin

EXPOSE 80

ENTRYPOINT ["rikka"]
